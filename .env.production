# Production Environment Variables
# Copy this file to .env and update values for production

SECRET_KEY=your-production-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-app.railway.app

# Database (Railway/Render will provide this)
DATABASE_URL=postgresql://user:password@host:port/database

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-domain.com

# Email settings (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password